<div data-controller="book" class="grid grid-cols-1 gap-6">
    
    <div class="grid grid-cols-1">
        <p class="text-4xl text-gray-900 dark:text-white">Koleksi Buku</p>

      
        <%= render "modal_form" %>
    </div>

    <div class="grid grid-cols-2">
        <button data-action="click->book#showModal" type="button" data-modal-target="static-modal" data-modal-toggle="static-modal" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Tambah Buku</button>
        <%= link_to destroy_user_session_path, method: :get, class: "text-center text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800" do %>
            Keluar (<b><%= current_user.username%></b>)
        <% end %>

    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-5">
        <%= will_paginate @books %>

        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400" >
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                <th scope="col" class="px-6 py-3">Judul</th>
                <th scope="col" class="px-6 py-3">Tahun Terbit</th>
                <th scope="col" class="px-6 py-3">Penulis</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <% @books.each do |book| %>
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= book.judul %>
                    </th>
                    <td class="px-6 py-4">
                    <%= book.tahun_terbit %>
                    </td>
                    <td class="px-6 py-4">
                    <%= book.author.nama %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>


        <%= will_paginate @books %>
    </div>


</div>